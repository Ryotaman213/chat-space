
.chat-main__members--box{ "data-message-id": message.id}
  .chat-main__members--chat
    = message.user.name
  .message-date
    = message.created_at.strftime ("%Y/%m/%d %H:%M")
  .members-meesage
    - if message.content.present?
      %p.message-content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?
